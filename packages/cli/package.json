{
  "name": "@graphql-box/cli",
  "description": "The GraphQL Box CLI module.",
  "version": "4.1.5",
  "author": "Dylan Aubrey",
  "license": "MIT",
  "homepage": "https://github.com/badbatch/graphql-box",
  "repository": {
    "directory": "packages/cli",
    "type": "git",
    "url": "https://github.com/badbatch/graphql-box"
  },
  "bugs": "https://github.com/badbatch/graphql-box/issues",
  "type": "module",
  "main": "./dist/main/index.mjs",
  "types": "./dist/types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "introspect": "bin/introspect"
  },
  "scripts": {
    "build": "pnpm run clean:dist && pnpm run compile",
    "clean:deps": "del-cli ./node_modules",
    "clean:dist": "del-cli ./dist",
    "compile": "pnpm run /^compile:.*/",
    "compile:main": "rollup -c ../../rollup.config.cjs",
    "compile:types": "tsc --project ./tsconfig.build.json"
  },
  "dependencies": {
    "@graphql-box/core": "workspace:../core",
    "fs-extra": "^11.1.1",
    "shelljs": "^0.8.3",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@babel/runtime": "<8",
    "core-js": "<4",
    "graphql": "<17",
    "lodash-es": "<5"
  },
  "devDependencies": {
    "@graphql-box/test-utils": "workspace:../test-utils"
  },
  "keywords": [
    "graphql-box",
    "graphql",
    "client",
    "server",
    "isomorphic"
  ]
}
