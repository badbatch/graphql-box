{
  "name": "handl",
  "version": "0.1.22",
  "description": "An isomorphic GraphQL client and server with a three-tier cache and persisted storage.",
  "author": "Dylan Aubrey <dylanaubrey@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/dylanaubrey/handl",
  "bugs": {
    "url": "https://github.com/dylanaubrey/handl/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dylanaubrey/handl"
  },
  "main": "lib/main/index.js",
  "module": "lib/module/index.js",
  "browser": "lib/browser/index.js",
  "types": "lib/main/index.d.ts",
  "keywords": [
    "handl",
    "graphql",
    "client",
    "server",
    "isomorphic"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "bin": {
    "introspect": "bin/introspect.js"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn run clean:libs && yarn run compile",
    "clean": "concurrently npm:clean:*",
    "clean:docs": "lerna exec --parallel -- del-cli ./docs",
    "clean:node_modules": "lerna exec --parallel -- del-cli ./node_modules",
    "clean:libs": "lerna exec --parallel -- del-cli ./lib",
    "compile": "concurrently npm:compile:*",
    "compile:browser": "cross-env BABEL_ENV=web lerna exec --parallel --ignore @handl/cli -- babel ./src --out-dir ./lib/browser --extensions \".ts\" --config-file ../../babel.config.js",
    "compile:main": "cross-env BABEL_ENV=main lerna exec --parallel -- babel ./src --out-dir ./lib/main --extensions \".ts\" --config-file ../../babel.config.js",
    "compile:module": "cross-env BABEL_ENV=module lerna exec --parallel --ignore @handl/cli -- babel ./src --out-dir ./lib/module --extensions \".ts\" --config-file ../../babel.config.js",
    "compile:types": "tsc --build ./packages",
    "cutoff": "cutoff-lerna",
    "debug:integration:web": "cross-env BABEL_ENV=debug TEST_ENV=web karma start --no-single-run --reporters progress --browsers",
    "debug:integration:worker": "cross-env BABEL_ENV=debug TEST_ENV=worker karma start --no-single-run --reporters progress --browsers",
    "docs": "lerna exec --parallel -- typedoc --includes ./src/main --out ./docs --options ../../typedoc.js",
    "init": "yarn && yarn run bootstrap && yarn run compile",
    "introspect:url": "node packages/cli/bin/introspect --url \"https://api.github.com/graphql\" --headers \"Authorization:bearer <TOKEN>\" --output \"test/introspections/github/index.json\"",
    "lint": "tslint --project ./tsconfig.json",
    "new-package": "new-package",
    "new-package:post": "yarn run bootstrap",
    "publish-cutoff": "publish-lerna-cutoff",
    "test:integration": "concurrently npm:test:integration:*",
    "test:integration:node": "cross-env BABEL_ENV=test nyc mocha --opts ./mocha.opts",
    "test:integration:web": "cross-env BABEL_ENV=web TEST_ENV=web karma start --single-run --browsers ChromeHeadless --reporters mocha",
    "test:integration:worker": "cross-env BABEL_ENV=web TEST_ENV=worker karma start --single-run --browsers ChromeHeadless --reporters mocha",
    "test:unit": "jest",
    "type-check": "tsc --noEmit",
    "wipe": "yarn run wipe:packages && yarn run wipe:repo",
    "wipe:packages": "lerna exec --parallel -- del-cli ./yarn.lock ./node_modules",
    "wipe:repo": "del-cli ./yarn.lock ./node_modules"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@babel/register": "7.0.0",
    "@types/chai": "^4.1.4",
    "@types/jest": "^23.3.7",
    "@types/lodash": "^4.14.110",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.9.4",
    "@types/sinon": "^5.0.2",
    "@types/sinon-chai": "^3.2.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.2",
    "babel-plugin-lodash": "^3.3.2",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "concurrently": "^4.0.1",
    "core-js": "^2.5.7",
    "cross-env": "^5.2.0",
    "cutoff": "^0.0.15",
    "del-cli": "^1.1.0",
    "dotenv": "^6.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.11.1",
    "husky": "1.1.0",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jest": "^23.6.0",
    "karma": "^3.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-safari-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "3.0.0",
    "lerna": "^3.3.2",
    "lodash": "^4.17.11",
    "lodash-webpack-plugin": "^0.11.4",
    "markdownlint-cli": "^0.13.0",
    "mocha": "^5.0.5",
    "nyc": "^13.0.1",
    "repodog": "^0.0.3",
    "sinon": "^6.3.3",
    "sinon-chai": "^3.2.0",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.9",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.9.1",
    "typedoc": "^0.12.0",
    "typedoc-plugin-markdown": "^1.1.15",
    "typescript": "^3.0.3",
    "webpack": "4.20.2",
    "webpack-cli": "^3.0.8"
  }
}
