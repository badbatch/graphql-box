{
  "name": "handl",
  "version": "0.0.27",
  "description": "An isomorphic graphql client and cache.",
  "author": "Dylan Aubrey <dylanaubrey@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/dylanaubrey/handl",
  "bugs": {
    "url": "https://github.com/dylanaubrey/handl/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dylanaubrey/handl"
  },
  "main": "lib/main/index.js",
  "module": "lib/module/index.js",
  "browser": "lib/browser/index.js",
  "keywords": [
    "graphql",
    "client",
    "isomorphic"
  ],
  "scripts": {
    "build": "npm run test && npm run transpile",
    "clean": "rimraf lib/*",
    "coverage": "cross-env BABEL_ENV=test ISO_LOG=false nyc mocha --exit --recursive test/specs/",
    "lint": "eslint . --fix",
    "publish:pkg": "npm run build && npm publish",
    "test": "npm run lint && npm run coverage",
    "transpile": "npm run clean && npm run transpile:browser && npm run transpile:main && npm run transpile:module",
    "transpile:browser": "cross-env BABEL_ENV=browser babel src --out-dir lib/browser --copy-files --extensions .ts",
    "transpile:main": "cross-env BABEL_ENV=main babel src --out-dir lib/main --copy-files --extensions .ts",
    "transpile:module": " cross-env BABEL_ENV=module babel src --out-dir lib/module --copy-files --extensions .ts"
  },
  "dependencies": {
    "cacheability": "0.0.1",
    "cachemap": "0.0.12",
    "es6-promise": "^4.1.1",
    "graphql": "^0.11.3",
    "iso-logger": "0.0.8",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "md5": "^2.2.1"
  },
  "devDependencies": {
    "@types/es6-promise": "0.0.33",
    "@types/graphql": "^0.11.6",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/lodash": "^4.14.85",
    "@types/md5": "^2.1.32",
    "@types/node": "^8.0.53",
    "chai": "^4.0.2",
    "codecov": "^3.0.0",
    "cross-env": "^5.0.1",
    "dirty-chai": "^2.0.0",
    "fetch-mock": "^5.12.1",
    "mocha": "^4.0.1",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.11.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
